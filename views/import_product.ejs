<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
  <div class="mt-8 bg-white p-6 shadow-md rounded-md">
    <h2 class="text-xl font-bold mb-4">Product Upload</h2>
    <div class="form">
      <form action="/products/processing" enctype="multipart/form-data" method="post" class="space-y-4">
        <label class="block">
          <span class="text-gray-700">Select a file</span>
          <input type="file" name="uploaded_file" class="block w-full mt-1 text-gray-900" />
        </label>
        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-700">Submit</button>
      </form>
    </div>

    <% if (messages.length > 0) { %>
    <div id="message" class="mt-4 p-4 bg-green-100 text-green-700 rounded-md">
      <ul>
        <% messages.forEach(message => { %>
          <li><%= message %></li>
        <% }); %>
      </ul>
    </div>
    <% } %>
</div>
