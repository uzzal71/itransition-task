<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <div class="col-span-1 md:col-span-2 lg:col-span-3 mt-8 bg-white p-6 shadow-md rounded-md">
        <div class="flex justify-between items-center">
            <h2 class="text-xl font-bold mb-4">Duplicated Products</h2>
            <span class="bg-red-100 text-red-800 text-sm font-semibold mr-2 px-4 py-2 rounded">Total: <%- totalProducts %></span>
          </div>
      <% if (products.length > 0) { %>
      <table id="product-list" class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Product Name</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Product Description</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Product Code</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Stock</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Price</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date Added</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Discontinued</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% products.forEach(product => { %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap"><%= product.strProductName %></td>
            <td class="px-6 py-4 whitespace-nowrap"><%= product.strProductDesc %></td>
            <td class="px-6 py-4 whitespace-nowrap"><%= product.strProductCode %></td>
            <td class="px-6 py-4 whitespace-nowrap"><%= product.Stock %></td>
            <td class="px-6 py-4 whitespace-nowrap"><%= product.Price %></td>
            <td class="px-6 py-4 whitespace-nowrap"><%= product.dtmAdded %></td>
            <td class="px-6 py-4 whitespace-nowrap"><%= product.dtmDiscontinued %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <!-- Pagination Controls -->
      <div class="mt-4">
        <nav class="block">
          <ul class="flex pl-0 rounded list-none flex-wrap">
            <% for (let i = 1; i <= totalPages; i++) { %>
              <li>
                <a href="?page=<%= i %>" class="first:ml-0 text-xs font-semibold flex w-8 h-8 mx-1 justify-center items-center rounded-full <% if (i === currentPage) { %> bg-blue-500 text-white <% } else { %> bg-gray-200 text-gray-600 hover:bg-gray-300 <% } %>">
                  <%= i %>
                </a>
              </li>
            <% } %>
          </ul>
        </nav>
      </div>
      <% } else { %>
      <p class="text-gray-500">No products found.</p>
      <% } %>
    </div>
    </div>